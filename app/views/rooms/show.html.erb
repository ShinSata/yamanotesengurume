<div class="dmapuri_area">
  <div class="dmapuri">
    <div class="title_area">
      <div class="title">
      <%= link_to  users_path, method: :get do %><i class="fa-solid fa-angle-left fa-3x" style="color:black;"></i><% end %>
        <h1>メッセージ</h1>
      </div>
    </div>
    <div class="massage_area">
      <div class="massage">
      <% if @messages.present? %>
        <% @messages.each do |m| %>
          <% if current_user.id == m.user_id %>
            <div class="massage1">
              <strong><%= m.content %><br></strong>
            </div>
          <% else %>
          <div class="hojo">
          <a href="/users/<%= m.user_id %>"><%= m.user.name %></a>
          </div>  
            <div class="massage2">
              <strong><%= m.content %></strong>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <h3 class="text-center">メッセージはまだありません</h3>
      <% end %>
      </div>
    </div>
    <%= form_for @message do |f| %>
      <div class="post_area1">
        <%= f.text_field :content, class: "field_input", :placeholder => "メッセージを入力" %>
        <%= f.hidden_field :room_id, :value => @room.id %>
          
        
      
        <div class="pst_button">
          <%= button_tag type: "submit" do %>
            <i class="fa-solid fa-paper-plane fa-3x" style="color:blue;"></i>
          <% end %>
        </div>
      </div>
      
    <% end %>
    
  </div>
</div>