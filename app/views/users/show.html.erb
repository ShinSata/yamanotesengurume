<div class="mypage">
  <div class="mypage_box">
    <div class="profile">
      <div class="title">
          <h1>マイページ</h1>
      </div>
        <p>名前 : <%= @user.name %></p>
        <p>メールアドレス : <%= @user.email %></p>
        <p>プロフィール : <%= @user.profile %></p>
        <%= image_tag @user.image_url, size: "200x250" if @user.image? %>
        <% if current_user.id == @user.id %>
          <%= link_to "編集する", edit_user_registration_path %>
        <% end %>
    </div>

      <h2>ユーザーの投稿一覧</h2>
      <% @user.gurumes.each do |t| %>
            <%= t.eatry_name %>
            <%= t.genre %>
            <%= t.purpose %>
            <%= t.price %>
            <%= t.delicious %>
            <%= t.access %>
            <%= t.others %>
      <% end %>

      <!-- 以下はいいね機能を実装している場合-->
      <h2>ユーザーがいいねした投稿一覧</h2>
      <% @user.liked_gurumes.each do |t| %>
        <%= t.eatry_name %>
            <%= t.genre %>
            <%= t.purpose %>
            <%= t.price %>
            <%= t.delicious %>
            <%= t.access %>
            <%= t.others %>
      <% end %>
      <!-- ここまで-->

      <% if @user.id == current_user.id %>

      <% else %>
        <% if @isRoom == true %>
          <p><a href="/rooms/<%= @roomId %>">チャットへ</a>
        <% else %>
          <%= form_for @room do |f| %>
            <%= fields_for @entry do |e| %>
              <%= e.hidden_field :user_id, :value=> @user.id %>
            <% end %>
            <%= f.submit "チャットを始める" %>
          <% end %>
        <% end %>
      <% end %>

      <%= link_to "ユーザー一覧へ", users_path %>

      <%= link_to "Gurume一覧へ", gurumes_path %>
  </div>
</div>