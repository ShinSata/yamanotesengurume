<div class="mypage">
  <div class="mypage_box">
    <div class="profile">
      <div class="title_area">
        <div class="title">
        <% if current_user.id == @user.id %>
              <h1>マイページ</h1>
        <% else %>
              <h1>投稿者ページ</h1>
        <% end %>
            
        </div>
      </div>
      <div class="information_area">
          <div class="picture">
            <%= image_tag @user.image_url, size: "200x250" if @user.image? %>
          </div>
          <div class="information">
            <p>名前 : <%= @user.name %></p>
            <p>メールアドレス : <%= @user.email %></p>
            <p>プロフィール : <%= @user.profile %></p>
          </div>
        </div>
        <div class="button_area">
          <div class="button">
            <% if current_user.id == @user.id %>
              <%= link_to "編集する", edit_user_registration_path %>
            <% end %>
          </div>
        </div>
        <%= render 'relationships/follow_button', user: @user %>
    </div>
    <div class="post_title_area1">
      <div class="post_title_area">
        <div class="post_title">
          <h2>ユーザーの投稿一覧</h2>
        </div>
      </div>
    </div>
      <div class="post">
        <% @user.gurumes.each do |t| %>
          <div class="post1">
            <p>店の名前：<%= t.eatry_name %></p>
            <p>ジャンル：<%= t.genre %></p>
            <p>目的：<%= t.purpose %></p>
            <p>値段：<%= t.price %>円</p>
            <p>おいしさ：<%= t.delicious %></p>
            <p>アクセス：<%= t.access %></p>
            <p>その他：<%= t.others %></p>
            <% if t.images.present? %>
              <% t.images.each do |image| %>
                <%= image_tag image.image_url, size: "250x200" %>
              <% end %>
            <% else %>
              <p><%= image_tag "noimage.png", size: "200x200" %></p>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="post_title_area1">
        <div class="post_title_area">
          <div class="post_title">
            <h2>ユーザーがいいねした投稿一覧</h2>
          </div>
        </div>
      </div>
      <div class="post">
        <% @user.liked_gurumes.each do |t| %>
          <div class="post1">
            <p>店の名前：<%= t.eatry_name %></p>
            <p>ジャンル：<%= t.genre %></p>
            <p>目的：<%= t.purpose %></p>
            <p>値段：<%= t.price %>円</p>
            <p>おいしさ：<%= t.delicious %></p>
            <p>アクセス：<%= t.access %></p>
            <p>その他：<%= t.others %></p>
            <% if t.images.present? %>
              <% t.images.each do |image| %>
                <%= image_tag image.image_url, size: "250x200" %>
              <% end %>
            <% else %>
              <p><%= image_tag "noimage.png", size: "200x200" %></p>
            <% end %>
          </div>
        <% end %>
      </div>
      <h2>フォロー</h2>
        <% @user.relationships.each do |u| %>
            <p><a href="/users/<%= u.follow_id %>"><%= u.follow_id %>さん</a></p>
        <% end %>
      <% if @user.id == current_user.id %>

      <% else %>
        <% if @isRoom == true %>
          <p><a href="/rooms/<%= @roomId %>">チャットへ</a>
        <% else %>
          <%= form_for @room do |f| %>
            <%= fields_for @entry do |e| %>
              <%= e.hidden_field :user_id, :value=> @user.id %>
            <% end %>
            <%= f.submit "チャットを始める" %>
          <% end %>
        <% end %>
      <% end %>

      
  </div>
</div>