<div class="sign_up">
  <div class="sign_up_box">
      <div class="title_area">
        <div class="title">
          <h2>新規登録画面</h2>
        </div>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="name_area">
            <div class="name">
                <%= render "users/shared/error_messages", resource: resource %>
                <div class="field">
                  <div class="c">
                    <%= f.label :名前 %>
                  </div>
                  <div class="d">
                    <%= f.text_field :name, autofocus: true, :size => 35 %>
                  </div>
                </div>
                <div class="field">
                  <div class="c">
                    <%= f.label :Eメール %>
                  </div>
                  <div class="d">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => 35 %>
                  </div>
                </div>

                <div class="field">
                  <div class="c">
                    <%= f.label :パスワード %>
                  </div>
                  <div class="d">
                    <%= f.password_field :password, autocomplete: "new-password", :size => 35 %>
                  </div>
                </div>

                <div class="field">
                  <div class="c">
                    <%= f.label :パスワード確認用 %>
                  </div>
                  <div class="d">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", :size => 35 %>
                  </div>
                </div>
            </div>
          </div>
        <div class="button_area">
          <div class="actions">
            <%= f.submit "新規登録する" ,class: 'sgn_btn' %>
          </div>
        </div>

      <% end %>
        
      

<%#= render "users/shared/links" %>

  </div>
</div>